<launch>

  <arg name="play_rosbag" default="false" />
  <arg name="gui" default="true" />
  <arg name="RVIZ" default="false" />
  <arg name="GPU" default="-1" />
  <arg name="INPUT_IMAGE" default="/camera_remote/rgb_half/image_rect_color" />
  <arg name="INPUT_DEPTH_IMAGE" default="/camera_remote/depth_registered/hw_registered/image_rect_raw" />
  <arg name="INPUT_CAMERA_INFO" default="/camera_remote/rgb_half/camera_info" />
  <arg name="INPUT_CLOUD" default="/camera_remote/depth_registered/points" />

  <group if="$(arg play_rosbag)">
    <include file="$(find jsk_data)/launch/hrp2_play.launch" >
      <!-- <arg name="bagfile_names" value="/home/itohdak/Desktop/rosbag/holding_objects.bag"/> -->
      <arg name="bagfile_names" value="/home/itohdak/Desktop/rosbag/data_2017-10-20-15-40-19.bag"/>
      <arg name="launch_openni" value="true"/>
      <arg name="launch_multisense" value="false" />
      <arg name="rosbag_option" value="--clock -l -r 0.5" />
      <!-- <arg name="launch_robot_model" value="$(arg launch_robot_model)" /> -->
    </include>
  </group>

  <arg name="MANAGER" value="people_pose_estimation_2d_nodelet_manager" />
  <node name="$(arg MANAGER)"
        pkg="nodelet" type="nodelet"
        args="manager"/>

  <node name="people_pose_estimation_2d"
        pkg="jsk_perception" type="people_pose_estimation_2d.py"
        output="screen">
    <remap from="~input" to="$(arg INPUT_IMAGE)" />
    <remap from="~input/info" to="$(arg INPUT_CAMERA_INFO)" />
    <remap from="~input/depth" to="$(arg INPUT_DEPTH_IMAGE)" />
    <rosparam subst_value="true">
      gpu: $(arg GPU)
      model_file: $(find jsk_perception)/trained_data/pose_estimation_2d_chainermodel.pkl
      with_depth: true
      scales: [0.38]
      stride: 8
    </rosparam>
  </node>

  <node name="people_mask_publisher"
        pkg="jsk_perception" type="people_mask_publisher_ito.py"
        output="screen">
    <remap from="~input" to="$(arg INPUT_IMAGE)" />
    <remap from="~input/pose" to="people_pose_estimation_2d/pose_2d" />
    <rosparam>
      person_indices: 0
      <!-- limb_part: RHand -->
      limb_part: Body
    </rosparam>
  </node>

  <node name="apply_mask_image"
        pkg="nodelet" type="nodelet"
        args="standalone jsk_perception/ApplyMaskImage" >
    <remap from="~input" to="$(arg INPUT_IMAGE)" />
    <remap from="~input/mask" to="people_mask_publisher/output" />
    <rosparam>
      clip: false
    </rosparam>
  </node>

  <include file="$(find opencv_apps)/launch/hsv_color_filter.launch" >
    <arg name="node_name" value="hsv_color_filter" />
    <arg name="image" value="apply_mask_image/output" />
    <arg name="debug_view" value="false" />
    <arg name="h_limit_max" value="24" />
    <arg name="h_limit_min" value="2" />
    <arg name="s_limit_max" value="256" />
    <arg name="s_limit_min" value="0" />
    <arg name="v_limit_max" value="255" />
    <arg name="v_limit_min" value="0" />
  </include>

  <node name="erode_mask_image"
        pkg="jsk_perception" type="erode_mask_image" >
    <remap from="~input" to="hsv_color_filter/image" />
  </node>

  <node name="dilate_mask_image"
        pkg="jsk_perception" type="dilate_mask_image" >
    <remap from="~input" to="erode_mask_image/output" />
  </node>

  <node name="mask_image_to_point_indices"
    	pkg="nodelet" type="nodelet"
        args="load jsk_pcl_utils/MaskImageToPointIndices $(arg MANAGER)"
        output="screen" clear_params="true" >
    <remap from="~input" to="dilate_mask_image/output" />
  </node>

  <node name="extract_indices"
    	pkg="nodelet" type="nodelet"
        args="load pcl/ExtractIndices $(arg MANAGER)"
        output="screen" clear_params="true">
    <remap from="~input" to="$(arg INPUT_CLOUD)" />
    <remap from="~indices" to="mask_image_to_point_indices/output" />
    <rosparam>
      approximate_sync: true
    </rosparam>
  </node>

  <node name="centroid_publisher"
    	pkg="nodelet" type="nodelet"
        args="load jsk_pcl/CentroidPublisher $(arg MANAGER)"
        output="screen" clear_params="true">
    <remap from="~input" to="extract_indices/output" />
    <rosparam>
      publish_tf: true
    </rosparam>
  </node>

  <group if="$(arg gui)" >
    <node name="image_view0"
          pkg="image_view" type="image_view" >
      <remap from="image" to="people_pose_estimation_2d/output" />
    </node>
    <node name="image_view1"
          pkg="image_view" type="image_view" >
      <remap from="image" to="people_mask_publisher/debug/output" />
    </node>
    <node name="image_view2"
          pkg="image_view" type="image_view" >
      <remap from="image" to="apply_mask_image/output" />
    </node>
  </group>

  <group if="$(arg RVIZ)" >
    <node name="rviz"
          pkg="rviz" type="rviz"
	  args="-d /home/itohdak/.rviz/for_recv.rviz" />
    <!-- $(find jsk_perception)/sample/rviz/people_pose_estimation_2d_ito.rviz -->
  </group>

</launch>
